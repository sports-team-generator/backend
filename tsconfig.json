{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": false,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@common/*": ["src/common/*"],
      "@src/*": ["src/*"]
    },
    "lib": ["es2019"]
  },
  "include": ["src/**/*.ts", "./src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
